useDynLib(socketeer, .registration=TRUE)

export(
    ## low-level
    hostname, port, is_open, send, recv,
    client,
    server, listen, selectfd, accept,

    ## Server
    Server, Client
)

S3method(print, socketeer)

S3method(send, client)
S3method(send, clientof)

S3method(recv, client)
S3method(recv, clientof)

S3method(close, client)
S3method(close, server)
S3method(close, clientof)
